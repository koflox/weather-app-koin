<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.koflox.cities.favorites.FavoritesCitiesViewModel" />

        <variable
            name="item"
            type="com.koflox.cities.data.data.FavoriteCity" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.koflox.cities.FavoritesCitiesFragment">

        <com.koflox.common_ui.RecyclerViewEmptySupport
            android:id="@+id/rvFavoriteCities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="@dimen/indent_medium"
            app:data="@{viewModel.favoriteCities}" />

        <TextView
            android:id="@+id/tvPlaceholderFavoriteCities"
            style="@style/PlaceHolderTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/placeholder_text_favorite_cities"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>
</layout>